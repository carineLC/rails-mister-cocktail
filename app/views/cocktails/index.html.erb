<%= render 'shared/banner' %>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
        url(<%= cl_image_path(cocktail.photo, crop: :fill) %>)">
          <%= link_to cocktail_path(cocktail) do%>
          <div class="card-link"></div>
          <% end %>
          <div class="card-name">
            <h2><%= cocktail.name %></h2>
          </div>
          <div class="card-delete">
            <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

  </div>

</div>



